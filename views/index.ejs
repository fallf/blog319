<div class="author">
  <h1 class="author__heading">Hi, and welcome to BookyLooky!</h1>
  <p class="author__body">
    where we share our love for books and explore captivating stories together!
  </p>
</div>
<img
  src="/img/photo1.jpg"
  alt="an open books"
  class="hero-image"
  width="981"
  height="528"
/>
<section class="articles">
  <h2 class="articles__heading">Latest Entries</h2>
  <ul class="articles-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination"
    >&lt; View Older Reviews</a
  >
  <% } %>
</section>
